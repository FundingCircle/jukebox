<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
<!--            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
<!--            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>-->
            <pattern>%logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="fundingcircle.jukebox.backend.cucumber" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="fundingcircle.jukebox.client" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="fundingcircle.jukebox.step-coordinator" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="fundingcircle.jukebox.step-client.jlc-clojure" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="fundingcircle.jukebox.step-client.jlc-ruby" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="fundingcircle.jukebox.step-client.jlc-cli" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>
    <root level="error">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
